<% @article.comments.reverse_each do |comment| %>
  <div>
    <h4>Comment by <%= comment.author_name %></h4>
    <p class="comment"><%= comment.body %></p>
  </div>
  <p style="font-size: 10pt; margin-bottom: 20px">
    Posted <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
  </p>
<% end %>
